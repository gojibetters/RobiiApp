<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_main">

    <include layout="@layout/back_arrow"/>
    <TextView
        android:id="@+id/txt_phrase_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="random stuff"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:height="35sp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <include layout="@layout/create_robot_shapes_container"
        />

    <FrameLayout
        android:id="@+id/fl_container_content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/phases_create_shape_square"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/create_robot_colors"/>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>